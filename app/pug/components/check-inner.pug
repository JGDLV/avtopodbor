    ]
  }

.we-check
  .container
    h2.we-check__header !{weCheck.header}
    .we-check__inner
      .we-check__left
        img.we-check__image(src=weCheck.image, alt="")
        .we-check-items
          each item, index in weCheck.items
            .we-check__item(class="we-check__item_" + (index + 1)) !{item.header}
      .we-check__right
        each item, index in weCheck.items
          .we-check__right-item
            .we-check__item-header !{item.header}
            .we-check__item-text !{item.text}
        a.we-check__button.btn(href=weCheck.button.href) !{weCheck.button.text}
